

<%= check_box_tag(:pet_dog) %>
<%= label_tag(:pet_dog, "I own a dog") %>
<%= check_box_tag(:pet_cat) %>
<%= label_tag(:pet_cat, "I own a cat") %>

<h1 align='center'>Students Records</h1>
<div align=left>
  <%= form_tag students_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search by name", fname: nil %>
  <% end %>
</div>

<table id='tab' border='1' cellpadding='5' align=center>

  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Dob</th>
    <th colspan='3'>Action</th>
    
  </tr>

  <% @students.each do |student| %>
  <tr>
    <td><%= student.fname %></td>
    <td><%= student.lname %></td>
    <td><%= student.address %></td>
    <td><%= student.phone %></td>
    <td><%= student.dob %></td>
    <td><%= link_to image_tag("icon-view.png", :border => 0), student %></td>
    <td><%= link_to image_tag("pencil.png", :border => 0), edit_student_path(student) %></td>
    <td><%= link_to image_tag("icon_missing.png", :border => 0), student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <% end %>
</table>

<br />

 <%= will_paginate @posts %> <br />

<div align='center'>
 <%= link_to 'New Student', new_student_path %> |
 <%= link_to 'Back', :controller => 'admin', :action => "index" %>
</div> 