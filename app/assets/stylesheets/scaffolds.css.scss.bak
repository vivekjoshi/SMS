body {
   background-color: silver;
  color: #333;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 20px;
  line-height: 40px;
 
  background: url('/images/school1.png') no-repeat;
  
}
#header
{
  margin: 0;
	padding: 0;
	text-align: left;
	font: 12px Arial, Helvetica, sans-serif;
	font-size: 20px;
	color: PapayaWhip;
	background: #CCCCCC;
	background-image:url(background.png);
	background-repeat:repeat-x;
}
#content_main
{
	width:659px;
	padding-left:15px;
	padding-right:15px;
	color: #FFFFFF;
}

p, ol, ul, td {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 18px;
  line-height: 18px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}
.field
{

}
.sign_out
{
  float:right;
  margin-right: 15px;
  color:white;
  text-decoration:none;

  &:hover {
    color: red;
  }
}

.menu
{
  
  margin-left: 10px;
  margin-top: -15px;
  
  text-decoration:none;
  width:99%;
  height:35px;
}

a {
  color: black;
  text-decoration:none;

  &:visited {
    color: #666;
     
  }
  &:hover {
    color: #fff;
  }
}
.back_btn
{
  margin-left:30px;
}
.container
{
    background:#BFDFFD;
    margin-left: auto;
    margin-right: auto;
    width: 62%;
    border-radius:5px;
    opacity:0.7;
}
#tab
{
    background:#BFDFFD;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    border-radius:5px;
    opacity:0.7;
}

#tab2
{
    background:#BFDFFD;
    margin-left: auto;
    margin-right: auto;
    width: 45%;
    border-radius:5px;
    opacity:0.7;
}

#tab1
{
    background:#BFDFFD;
    margin-left: auto;
    margin-right: auto;
    width: 32%;
    border-radius:5px;
    opacity:0.7;
}

div {
  &.field, &.actions {
    margin-bottom: 10px;
  }
}

#notice {
  color:black;
  margin-left: 507px;
  font-family: Verdana;
  
}

.field_with_errors {
  padding: 2px;
  background-color: SlateGray;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid black;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color:SlateGray;
    color: #fff;
  }
  ul li {
    font-size: 12px;
    list-style: square;
  }
}
